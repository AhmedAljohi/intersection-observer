{
  "name": "@intersection-observer/react",
  "version": "0.0.3",
  "description": "React utilities for observing when elements enter or leave the viewport using Intersection Observer API.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --watch"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "dependencies": {
    "@intersection-observer/core": "^0.0.3"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedaljohi/intersection-observer"
  },
  "author": "Ahmed Aljohi",
  "license": "MIT",
  "keywords": [
    "react",
    "intersection-observer",
    "viewport",
    "hooks",
    "lazy-loading",
    "render-props",
    "react-component"
  ],
  "publishConfig": {
    "access": "public"
  }
}
